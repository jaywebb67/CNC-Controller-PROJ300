#include "Gcode.h"


#include <stdio.h>
#include <stdlib.h>
#include <string.h>


void parse_gcode(char *line) {
    char *token;
    token = strtok(line, " ");
    while (token != NULL) {
        if (token[0] == 'G') {
            // Handle G-code command
            int code = atoi(&token[1]);
            switch (code) {
                case 0:
                    printf("G0 rapid move\n");
                    break;
                case 1:
                    printf("G1 linear move\n");
                    break;
                // Add more cases for other G-code commands
                default:
                    printf("Unknown G-code command: %s\n", token);
            }
        } else if (token[0] == 'M') {
            // Handle M-code command
            int code = atoi(&token[1]);
            switch (code) {
                case 3:
                    printf("M3 spindle on, clockwise rotation\n");
                    break;
                case 5:
                    printf("M5 spindle off\n");
                    break;
                // Add more cases for other M-code commands
                default:
                    printf("Unknown M-code command: %s\n", token);
            }
        } else if (token[0] == ';') {
            // Ignore comment
            break;
        } else {
            // Handle other tokens (e.g. X, Y, Z, F)
            printf("Token: %s\n", token);
        }
        token = strtok(NULL, " ");
    }
}



